{
  "name": "LFIcare",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "postinstall": "patch-package || echo \"no patches\"",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "prebuild:android": "expo prebuild -p android --clean",
    "native:clean": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/prebuild.ps1 -CleanOnly",
    "native:rebuild:android": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/prebuild.ps1 -Platform android",
    "diagnose:autolink": "node -e \"console.log(require('@react-native-community/cli').config())\"",
    "backup:baseline": "git add . && git commit -m \"baseline (config & assets)\" && git tag -f prebuild-baseline",
    "restore:baseline": "git restore --source=prebuild-baseline --worktree --staged .",
    "dev": "expo start --dev-client",
    "build:dev:android": "npx eas build --profile development --platform android",
    "build:dev:ios": "npx eas build --profile development --platform ios",
    "build:preview:android": "npx eas build --profile preview --platform android",
    "build:preview:ios": "npx eas build --profile preview --platform ios",
    "build:prod:android": "npx eas build --profile production --platform android",
    "build:prod:ios": "npx eas build --profile production --platform ios",
    "update:dev": "npx eas update --branch development --message \"dev update\"",
    "update:preview": "npx eas update --branch preview --message \"preview update\"",
    "update:prod": "npx eas update --branch production --message \"prod update\""
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/native-stack": "^7.6.2",
    "@types/react": "~19.1.10",
    "dotenv": "^16.4.5",
    "expo": "54.0.23",
    "expo-build-properties": "~1.0.9",
    "expo-dev-client": "~6.0.17",
    "expo-file-system": "~19.0.17",
    "expo-image-picker": "~17.0.8",
    "expo-media-library": "~18.2.0",
    "expo-sharing": "~14.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-system-ui": "~6.0.8",
    "firebase": "^11.10.0",
    "linkify-it": "^5.0.0",
    "patch-package": "^8.0.1",
    "postinstall-postinstall": "^2.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-gifted-chat": "^2.8.1",
    "react-native-hyperlinks": "^1.0.4",
    "react-native-image-viewing": "^0.2.2",
    "react-native-keyboard-controller": "1.18.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-share-menu": "^6.0.0",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "0.5.1",
    "typescript": "~5.9.2"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "react-native-share-menu",
          "react-native-receive-sharing-intent"
        ],
        "listUnknownPackages": false
      }
    }
  },
  "devDependencies": {
    "@react-native-community/cli": "^20.0.2",
    "@types/react": "~19.1.10"
  }
}
