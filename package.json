{
  "name": "LFIcare",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "prebuild:android": "expo prebuild -p android --clean",
    "native:clean": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/prebuild.ps1 -CleanOnly",
    "native:rebuild:android": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/prebuild.ps1 -Platform android",
    "diagnose:autolink": "node -e \"console.log(require('@react-native-community/cli').config())\"",
    "backup:baseline": "git add . && git commit -m \"baseline (config & assets)\" && git tag -f prebuild-baseline",
    "restore:baseline": "git restore --source=prebuild-baseline --worktree --staged .",
    "postinstall": "patch-package || echo \"no patches\""
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "~1.23.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.9.12",
    "@react-navigation/stack": "^6.4.1",
    "dotenv": "^16.4.5",
    "expo": "~52.0.47",
    "expo-dev-client": "~5.0.20",
    "expo-image-picker": "~16.0.6",
    "expo-splash-screen": "~0.29.24",
    "expo-system-ui": "~4.0.9",
    "firebase": "^11.10.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "~0.76.6",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-gifted-chat": "^2.8.1",
    "react-native-reanimated": "~3.16.1",
    "react-native-receive-sharing-intent": "^2.0.0",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-share-menu": "^6.0.0",
    "react-native-web": "~0.19.13",
    "react-native-worklets": "0.5.1"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "react-native-share-menu",
          "react-native-receive-sharing-intent"
        ],
        "listUnknownPackages": false
      }
    }
  },
  "devDependencies": {
    "@types/react": "18.3.26",
    "expo-build-properties": "^0.13.3",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "typescript": "~5.9.2"
  }
}
